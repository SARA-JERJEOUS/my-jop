@inject miide.helper.SessionMnger _session
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - miide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>


    <style>
        .form-control-dark {
            border-color: var(--bs-gray);
        }

            .form-control-dark:focus {
                border-color: #fff;
                box-shadow: 0 0 0 .25rem rgba(255, 255, 255, .25);
            }

        .text-small {
            font-size: 85%;
        }

        .dropdown-toggle {
            outline: 0;
        }

        a:hover {
            background-color: cadetblue;
        }
      
    </style>
</head>
<body>
    <!--header start-->

    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <img src="~/imgee/tyy.jpg" asp-action="Index" asp-controller="Homepharmacy" style=" border-radius: 57%; width: 57px; position: absolute; margin: 7px 50px;" />
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link px-2 link-dark    " asp-action="Index" asp-controller="Homepharmacy" >Home</a></li>
                <li><a class="nav-link px-2 link-dark " asp-action="prediction" asp-controller="Homepharmacy">Prediction</a></li>
                <li><a class="nav-link px-2 link-dark" asp-action="Drug" asp-controller="Homepharmacy">Drug</a></li>


                <li><a class="nav-link px-2   link-dark" asp-action="About" asp-controller="Homepharmacy">About</a></li>
            </ul>

            <div class="col-md-3 text-end">
                @if (_session.IsAuthorized)
                {
                    <a asp-action="logout" asp-controller="Homepharmacy" class="btn btn-outline-dark me-2">Logout</a>
                }
                else
                {

                    <a asp-action="login" asp-controller="Homepharmacy" class="btn btn-outline-dark me-2">Login</a>
                }  @*@if (_session.IsAuthorized)
                    {
                        <a class="btn btn-primary" asp-action="dashboard" asp-controller="Homepharmacy">Dashboard</a>
                    }*@
            </div>
        </header>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="container" style="position:sticky ;   ">
        <p class="float-end"><a style="color: #e6f39d" href="#" class="btn btn-dark">Back to top</a></p>
        <p style="font:bolder;color:black">&copy; 2022- Health Online. </p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
 
  

  

</body>
</html>
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>